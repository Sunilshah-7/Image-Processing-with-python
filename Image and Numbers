import cv2
def main():
    imgpath = "C:\\Users\\edkni\\Downloads\\image_processing_files\\Dataset\\lena_color_256.tif"
    img = cv2.imread(imgpath,0)
    
    print(type(img))
    print(img.dtype)
    print(img.shape)
    print(img.ndim)
    print(img.size)

    cv2.imshow('Lena', img)
    cv2.waitKey(0)
    cv2.destroyWindow('Lena')
    

if __name__ == "__main__":
    main()
