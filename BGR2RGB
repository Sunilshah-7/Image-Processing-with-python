import cv2
import matplotlib.pyplot as plt
def main():
    imgpath = "C:\\Users\\edkni\\Downloads\\image_processing_files\\Dataset\\lena_color_256.tif"
    img = cv2.imread(imgpath)
    img1 = cv2.cvtColor(img,cv2.COLOR_BGR2RGB)
    
    plt.imshow(img)
    plt.title("BGR lena")
    plt.xticks([])
    plt.yticks([])
    plt.show()

    plt.imshow(img1)
    plt.title("RGB lena")
    plt.xticks([])
    plt.yticks([])
    plt.show()
   
    
if __name__ == "__main__":
    main()
    
